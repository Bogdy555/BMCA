@using BMCA.Models
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> MyUserManager

@model Message

@{
    ViewData["Title"] = "Edit Message";
}

<div class="mt-5 BMCA_sitecard" style="padding-bottom: calc(15px + (100vw - 700px) * (15 - 30) / (700 - 1000)">
    <a class="bi bi-chevron-left BMCA_back" style="margin-top: 5px; margin-left: 5px" href="/Channels/Show/@Model.ChannelId"></a>
    <div class="mt-2" style="text-align:center">
        <h1 style="margin:0 20px">@ViewData["Title"]</h1>
    </div>

    <hr />

    <div style="text-align:center">
        <form action="/Messages/Edit/@Model.ID" method="post" enctype="multipart/form-data">
            <input type="hidden" name="_Message.ChannelId" value="@Model.ChannelId" />
            @Html.TextBox("_Message.Content")
            <input type="file" name="_File" />
            <button type="submit">Send</button>
        </form>
    </div>
</div>
